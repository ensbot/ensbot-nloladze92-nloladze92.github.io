@{
    ViewBag.Title = "Blog | BuildR Template";
}

@section HeaderBody {
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-2">
                <h1 class="animated slideInDown">Ohni News</h1>
                <h2 class="animated slideInUp">Blue Sky for Now<br>Reality Tomorrow</h2>
            </div>
        </div>
    </div>
}

<section class="blog-post">
    <div class="row">
        <div class="col-sm-6 fadeUpEffect">
            <img src="../Content/Images/exchange.jpg">
        </div>
        <div class="col-sm-6 fadeUpEffect wait05">
            <div class="post">
                <div class="row">
                    <div class="col-xs-4">Exchanges</div>
                    <div class="col-xs-8 text-right">August 14th, 2017 <span>|</span> </div>
                </div>
                <h2>We are listed on our first exchange</h2>
                <p>
                    It took some time but we gained a little momentum and we managed to get on our
                    first exchange. Things are slow for now but we're hoping to grow.
                </p>
                <a href="https://stocks.exchange/trade/Ohni/ETH" class="default"><i class="fa fa-long-arrow-right"></i> Check it out</a>
            </div>
        </div>
    </div>
</section>

